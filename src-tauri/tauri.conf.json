{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "beautifulnotes",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "save": true
      },
      "fs": {
        "writeFile": true,
        "removeFile": true,
        "readFile": true,
        "scope": ["$DOCUMENT/*", "$DESKTOP/*"]
      },
      "path": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Beautiful Notes",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.beautifulnotes.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
